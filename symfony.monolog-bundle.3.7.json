{
  "manifests": {
    "symfony/monolog-bundle": {
      "manifest": {
        "bundles": {
          "Symfony\\Bundle\\MonologBundle\\MonologBundle": ["all"]
        },
        "copy-from-recipe": {
          "config/": "%CONFIG_DIR%/"
        },
        "conflict": {
          "symfony/framework-bundle": "<5.3"
        }
      },
      "files": {
        "config/packages/monolog.yaml": {
          "contents": [
            "parameters:",
            "  log_path: '%kernel.logs_dir%/%kernel.environment%.log'",
            "  log_level: info",
            "",
            "services:",
            "  _defaults:",
            "    autowire: true",
            "    autoconfigure: true",
            "  monolog.formatter.main:",
            "    class: Gadget\\Log\\Monolog\\Formatter\\ConsoleLogFormatter",
            "",
            "monolog:",
            "  channels:",
            "    - deprecation",
            "  handlers:",
            "    main:",
            "      type: rotating_file",
            "      path: '%env(string:default:log_path:LOG_PATH)%'",
            "      level: '%env(string:default:log_level:LOG_LEVEL)%'",
            "      formatter: monolog.formatter.main",
            "      channels: ['!event']",
            "    console:",
            "      type: console",
            "      process_psr_3_messages: false",
            "      channels: ['!event', '!doctrine']",
            "    deprecation:",
            "      type: stream",
            "      channels: [deprecation]",
            "      path: php://stderr",
            "      formatter: monolog.formatter.json",
            ""
          ],
          "executable": false
        }
      },
      "ref": "29694021fb7ca5281446572df9e9f4584f1d492d"
    }
  }
}
