{
  "manifests": {
    "mjfk23/gadget-ldap": {
      "manifest": {
        "copy-from-recipe": {
          "config/": "%CONFIG_DIR%/"
        }
      },
      "files": {
        "config/packages/gadget_ldap.yaml": {
          "contents": [
            "services:",
            "  _defaults:",
            "    autowire: true",
            "    autoconfigure: true",
            "",
            "  Gadget\\LDAP\\Connection:",
            "    arguments:",
            "      $uri: '%env(string:default::LDAP_URI)%'",
            "      $user: '%env(string:default::LDAP_USER)%'",
            "      $pass: '%env(string:default::LDAP_PASS)%'",
            ""
          ],
          "executable": false
        }
      },
      "ref": ""
    }
  }
}
